#!/usr/bin/env ruby
require 'pry'

args      = ARGV
action    = args[0]
file_path = args[1]
puts "You ran Hyde with these arguments: #{args}"

def new_project(path)
  Dir.mkdir path
  Dir.mkdir (path + "/_output")
  Dir.mkdir (path + "/source")
  Dir.mkdir (path + "/source" + "/css")
  Dir.mkdir (path + "/source" + "/pages")
  Dir.mkdir (path + "/source" + "/post")
end

def check_path(path)
  Dir.exist?(path)
end

def create_skeleton(action, path)
  raise ArgumentError if check_path(path)
  if action == 'new'
    new_project(path)
    # populate created directory with 'skeleton'
  end
end

create_skeleton(action, file_path)

# if action == 'new' && !check_path(file_path)
