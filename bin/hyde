#!/usr/bin/env ruby
require 'pry'

class Hyde
  attr_reader :action, :path

  def initialize(action = ARGV[0], path = ARGV[1])
    @action = action
    @path   = path
  end

  def new_project(path)
    FileUtils.cp_r( 'bin/template/.', path)
  end

  def check_path(path)
    Dir.exist?(path)
  end

  def create_skeleton
    raise ArgumentError if check_path(path)
    if action == 'new'
      new_project(path)
    end
  end

end


if __FILE__ == $0

  Hyde.new.create_skeleton

end
