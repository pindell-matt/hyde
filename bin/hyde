#!/usr/bin/env ruby
require 'pry'

args      = ARGV
action    = args[0]
file_path = args[1]
puts "You ran Hyde with these arguments: #{args}"

def new_project(path)
  Dir.mkdir path
end

def check_path(path)
  Dir.exist?(path)
end

if action == 'new' && !check_path(file_path)
  new_project(file_path)
else
  puts "already exists!"
end

# ARGV[0] - will be the 'action'
# => 'new' will create the basic project setup
# => create directory
# => fill directory with files

# ARGV[1] - will be the 'path'
# => location where 'new' will place the project skeleton
