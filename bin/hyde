#!/usr/bin/env ruby

require_relative '../lib/hyde'

class Parse
  attr_reader :action

  def initialize
    @action = ARGV[0]
    @path   = ARGV[1]
    @title  = ARGV[2..-1]
  end

  def parse_submission
    hyde = Hyde.new(@action, @path, @title)
    case action
    when 'new'
      hyde.build_new
    when 'build'
      hyde.build_output
    when 'post'
      hyde.build_post
    end
  end
end

if __FILE__ == $0

  Parse.new.parse_submission

end
