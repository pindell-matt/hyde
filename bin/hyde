#!/usr/bin/env ruby

require './lib/parse_request'
require 'pry'

class HydeRunner

  def initialize
    @action = ARGV[0]
    @path   = ARGV[1]
    @title  = ARGV[2..-1]
  end

  def run_hyde
    ParseRequest.new(ARGV[0], ARGV[1], ARGV[2..-1]).parse_submission
  end

end

if __FILE__ == $0

  hyde = HydeRunner.new
  hyde.run_hyde

end
